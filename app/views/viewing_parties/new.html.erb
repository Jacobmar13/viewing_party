<h1><%= "Welcome #{current_user.email}!" %></h1>

<h2> Viewing Party Details </h2>

<p>Movie Title <%= @movie_info.title %></p>

<%= form_with url: viewing_party_create_path, method: :get, local: true do |f| %>
  <%= f.label :duration, 'Duration of Party' %>
  <%= f.number_field :duration, value: @movie_info.runtime %><br>

  <%= f.label :date, 'Day' %>
  <%= f.date_field :date %><br>

  <%= f.label :start_time, 'Start Time' %>
  <%= f.time_field :start_time %><br>

  <%= f.collection_check_boxes(:friend, current_user.friends, :friend_id, :friend_email) do |b| %>
    <div><%= b.check_box %><%= b.label { b.text } %></div>
  <% end %>

  <%= f.submit 'Create Party' %>
<% end %>
